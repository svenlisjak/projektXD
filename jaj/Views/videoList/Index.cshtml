@*model jaj.Models.video *@
@model List<jaj.Models.video>


@{
    ViewBag.Title = "Home Page";
}


<h4>Newest videos</h4>
<div class="row">
    @for (int i = 0; i != 4; i++)
    {
        <div class="col-md">
            <a href="/Upload/videoPage/@Model[i].videoID">
                <video width="150" height="100">
                    <source src="@Url.Content(Model[i].videoPath)" />
                    <video width="150" height="100" poster="@Url.Content(Model[i].videoPath)">
                        <source src="@Url.Content(Model[i].videoPath)" />
                    </video>
                </video>
                <br />
                @(Model[i].videoName)
            </a>
        </div>
    }
</div>





<div class="row">
    <div class="form-group">
        @{
            string HomeTag = "Gaming";

        }
        @Html.DropDownList(HomeTag, new SelectList(new List<object>
           {
             new {value = "Gaming" , text="Gaming"},
             new {value = "Lifestyle" , text="Lifestyle"},
             new {value = "Music" , text="Music"},
             new {value = "Sport" , text="Sport"},
             new {value = "Autism" , text="Autism"},
               }, "value", "text"))
    </div>
</div>

<div class="row">
    @for (int i = 0; i < 4; i++)
    {
        if (HomeTag == Model[i].tag)
        {
            <div class="col-md">
                <a href="/Upload/videoPage/@Model[i].videoID">
                    <video width="150" height="100">
                        <source src="@Url.Content(Model[i].videoPath)" />
                        <video width="150" height="100" poster="@Url.Content(Model[i].videoPath)">
                            <source src="@Url.Content(Model[i].videoPath)" />
                        </video>
                    </video>
                    <br />
                    @(Model[i].videoName)
                </a>
            </div>
        }
    }
</div>
