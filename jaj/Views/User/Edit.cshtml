@model jaj.Models.userEdit

@{
    ViewBag.Title = "Edit my profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editing profile</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>
                @Html.LabelFor(model => model.Username) : @Model.Username
            </h4>*@
        @*@Html.ActionLink("Resetiranje lozike","ResetLozinke", new { id = Model.KorisnickoIme},null)
            @Html.HiddenFor(model => model.KorisnickoIme)*@



        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.FavTag, new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(model => model.FavTag, new SelectList(new List<object>
               {
                 new {value = "Gaming" , text="Gaming"},
                 new {value = "Lifestyle" , text="Lifestyle"},
                 new {value = "Music" , text="Music"},
                 new {value = "Sport" , text="Sport"},
                 new {value = "Autism" , text="Autism"},
                   }, "value", "text"))
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.profilePicture, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="userInfo" >
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Upload", "Upload", "Upload")
</div>



<div>
    @Html.ActionLink("Home", "HomeSweet", "User")
</div>